{
  "compilerOptions": {
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@errors/*": [
        "./src/utils/errors/*"
      ],
      "@routers/*": [
        "./src/routers/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    ".eslintrc.js"
  ]
}